<odoo>
    <record id="view_hr_loan_payment_register_form" model="ir.ui.view">
        <field name="name">hr.loan.payment.register.form</field>
        <field name="model">hr.loan.payment.register</field>
        <field name="arch" type="xml">
            <form string="Register Loan Payment">
                <group>
                    <field name="amount" placeholder="Enter payment amount" />
                    <field name="journal_id"/>
                    <field name="payment_date"/>
                </group>
                <footer>
                    <button string="Register Payment" type="object" name="action_create_payment" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>