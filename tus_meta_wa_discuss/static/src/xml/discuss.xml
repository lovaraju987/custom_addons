<?xml version="1.0" encoding="UTF-8"?>
<templates id="template_ext" xml:space="preserve">
    <t t-name="ComposerExt" t-inherit="mail.Composer" t-inherit-mode="extension" owl="1">
        <xpath expr="//button[hasclass('o-mail-Composer-fullComposer')]" position="replace">
                <button t-if="props.showFullComposer and thread and thread.type === 'chatter'" class="o-mail-Composer-fullComposer btn btn-primary text-nowrap me-1 btn-primary my-2" title="Full composer" aria-label="Full composer" type="button" t-on-click="onClickFullComposer">Send Template</button>
        </xpath>
    </t>
</templates>


