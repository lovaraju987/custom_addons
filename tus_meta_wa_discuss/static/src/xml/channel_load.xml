<templates id="template_ext" xml:space="preserve">
        <t t-name="ChannelLoadExt" t-inherit="mail.DiscussSidebarCategory" t-inherit-mode="extension" owl="1">
            <xpath expr="//t[@t-call='mail.DiscussSidebarChannel']" position="after">
                <t t-if="category.isOpen and ['WpChannels', 'FbChannels', 'InstaChannels'].includes(category.id)">
                    <t t-if="category.threads.length > 0 ">
                         <div class="d-flex justify-content-center">
                        <button class="w-100 load_more rounded"
                                t-on-click="() => this.onClickUpdateMessageLimit(category.id)">Load More <i class="oi oi-chevron-down ms-2"/></button>
                    </div>
