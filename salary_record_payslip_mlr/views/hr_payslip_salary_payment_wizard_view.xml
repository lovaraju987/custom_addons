<odoo>
    <record id="view_hr_payslip_salary_payment_wizard_form" model="ir.ui.view">
        <field name="name">hr.payslip.salary.payment.wizard.form</field>
        <field name="model">hr.payslip.salary.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Record Salary Payment">
                <group>
                    <field name="payslip_id" readonly="1"/>
                    <field name="amount"/>
                    <field name="payment_date"/>
                    <field name="journal_id"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm_payment" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>