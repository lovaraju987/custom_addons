<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Demo KPI Report Groups -->
        <record id="demo_sales_kpi_group" model="kpi.report.group">
            <field name="name">Sales Performance</field>
            <field name="group_type">monthly</field>
            <field name="department">sales</field>
            <field name="description">Track sales targets, revenue, and customer acquisition metrics</field>
        </record>

        <record id="demo_hr_kpi_group" model="kpi.report.group">
            <field name="name">HR Performance</field>
            <field name="group_type">weekly</field>
            <field name="department">hr</field>
            <field name="description">Monitor employee satisfaction, training completion, and retention metrics</field>
        </record>

        <record id="demo_operations_kpi_group" model="kpi.report.group">
            <field name="name">Operations Efficiency</field>
            <field name="group_type">daily</field>
            <field name="department">operations</field>
            <field name="description">Track operational efficiency, cost reduction, and process optimization</field>
        </record>

        <!-- Demo KPI Reports -->
        <record id="demo_monthly_revenue_kpi" model="kpi.report">
            <field name="name">Monthly Revenue</field>
            <field name="target_type">currency</field>
            <field name="target_value">100000</field>
            <field name="kpi_direction">higher_better</field>
            <field name="kpi_type">manual</field>
            <field name="report_id" ref="demo_sales_kpi_group"/>
            <field name="department">sales</field>
            <field name="report_type">monthly</field>
            <field name="assigned_user_ids" eval="[(6, 0, [ref('base.user_admin')])]"/>
        </record>

        <record id="demo_customer_satisfaction_kpi" model="kpi.report">
            <field name="name">Customer Satisfaction Score</field>
            <field name="target_type">percent</field>
            <field name="target_value">85.0</field>
            <field name="kpi_direction">higher_better</field>
            <field name="kpi_type">manual</field>
            <field name="report_id" ref="demo_sales_kpi_group"/>
            <field name="department">sales</field>
            <field name="report_type">monthly</field>
            <field name="assigned_user_ids" eval="[(6, 0, [ref('base.user_admin')])]"/>
        </record>

        <record id="demo_lead_conversion_kpi" model="kpi.report">
            <field name="name">Lead Conversion Rate</field>
            <field name="target_type">percent</field>
            <field name="target_value">25.0</field>
            <field name="kpi_direction">higher_better</field>
            <field name="kpi_type">auto</field>
            <field name="report_id" ref="demo_sales_kpi_group"/>
            <field name="department">sales</field>
            <field name="report_type">monthly</field>
            <field name="assigned_user_ids" eval="[(6, 0, [ref('base.user_admin')])]"/>
        </record>

        <record id="demo_employee_satisfaction_kpi" model="kpi.report">
            <field name="name">Employee Satisfaction</field>
            <field name="target_type">percent</field>
            <field name="target_value">80.0</field>
            <field name="kpi_direction">higher_better</field>
            <field name="kpi_type">manual</field>
            <field name="report_id" ref="demo_hr_kpi_group"/>
            <field name="department">hr</field>
            <field name="report_type">monthly</field>
        </record>

        <record id="demo_training_completion_kpi" model="kpi.report">
            <field name="name">Training Completion Rate</field>
            <field name="target_type">percent</field>
            <field name="target_value">95.0</field>
            <field name="kpi_direction">higher_better</field>
            <field name="kpi_type">manual</field>
            <field name="report_id" ref="demo_hr_kpi_group"/>
            <field name="department">hr</field>
            <field name="report_type">monthly</field>
        </record>

        <record id="demo_process_efficiency_kpi" model="kpi.report">
            <field name="name">Process Efficiency</field>
            <field name="target_type">percent</field>
            <field name="target_value">90.0</field>
            <field name="kpi_direction">higher_better</field>
            <field name="kpi_type">manual</field>
            <field name="report_id" ref="demo_operations_kpi_group"/>
            <field name="department">operations</field>
            <field name="report_type">weekly</field>
        </record>

        <record id="demo_cost_reduction_kpi" model="kpi.report">
            <field name="name">Cost Reduction</field>
            <field name="target_type">currency</field>
            <field name="target_value">50000</field>
            <field name="kpi_direction">higher_better</field>
            <field name="kpi_type">manual</field>
            <field name="report_id" ref="demo_operations_kpi_group"/>
            <field name="department">operations</field>
            <field name="report_type">monthly</field>
        </record>

        <!-- Demo Submissions with proper date fields -->
        <record id="demo_submission_1" model="kpi.report.submission">
            <field name="kpi_id" ref="demo_monthly_revenue_kpi"/>
            <field name="value">95000</field>
            <field name="note">Good month, slightly below target due to market conditions</field>
            <field name="date" eval="(DateTime.now() - timedelta(days=5))"/>
        </record>

        <record id="demo_submission_2" model="kpi.report.submission">
            <field name="kpi_id" ref="demo_customer_satisfaction_kpi"/>
            <field name="value">88</field>
            <field name="note">Customer satisfaction improved with new support system</field>
            <field name="date" eval="(DateTime.now() - timedelta(days=3))"/>
        </record>

        <record id="demo_submission_3" model="kpi.report.submission">
            <field name="kpi_id" ref="demo_employee_satisfaction_kpi"/>
            <field name="value">85</field>
            <field name="note">Quarterly survey results show improvement</field>
            <field name="date" eval="(DateTime.now() - timedelta(days=1))"/>
        </record>

    </data>
</odoo>
