<odoo>
    <!-- Server Action for migrating filter field data -->
    <record id="action_migrate_all_filter_fields" model="ir.actions.server">
        <field name="name">Migrate All Filter Field Data</field>
        <field name="model_id" ref="model_kpi_report"/>
        <field name="state">code</field>
        <field name="code">
result = model.migrate_filter_field_data()
action = {
    'type': 'ir.actions.client',
    'tag': 'display_notification',
    'params': {
        'title': 'Migration Completed',
        'message': result['message'],
        'type': 'success' if result['failed'] == 0 else 'warning',
        'sticky': True,
    }
}
        </field>
        <field name="groups_id" eval="[(4, ref('kpi_tracking.group_kpi_admin'))]"/>
    </record>

    <!-- Menu item for the migration action (for admin users) -->
    <menuitem id="menu_kpi_migrate_data"
              name="Migrate Filter Fields"
              parent="menu_kpi_root"
              action="action_migrate_all_filter_fields"
              groups="kpi_tracking.group_kpi_admin"
              sequence="99"/>
</odoo>
