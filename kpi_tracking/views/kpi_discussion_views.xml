<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- KPI Discussion Views -->
    <record id="view_kpi_discussion_form" model="ir.ui.view">
        <field name="name">kpi.discussion.form</field>
        <field name="model">kpi.discussion</field>
        <field name="arch" type="xml">
            <form string="KPI Discussion">
                <header>
                    <button name="action_start_discussion" type="object" string="Start Discussion" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_resolve_discussion" type="object" string="Mark as Resolved" 
                            class="oe_highlight" invisible="state != 'active'"/>
                    <button name="action_close_discussion" type="object" string="Close Discussion" 
                            invisible="state not in ['active', 'resolved']"/>
                    <button name="action_reopen_discussion" type="object" string="Reopen Discussion" 
                            invisible="state != 'closed'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,resolved,closed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_action_items" icon="fa-tasks">
                            <field string="Action Items" name="action_items_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_completed_action_items" icon="fa-check-square-o">
                            <field string="Completed" name="completed_action_items" widget="statinfo"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="title" placeholder="Discussion Title"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="kpi_id" options="{'no_create': True}"/>
                            <field name="discussion_type"/>
                            <field name="priority" widget="priority"/>
                            <field name="initiator_id"/>
                        </group>
                        <group>
                            <field name="current_value"/>
                            <field name="target_value"/>
                            <field name="achievement_percent" widget="percentage"/>
                            <field name="department"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Discussion Details">
                            <group>
                                <field name="assigned_to_ids" widget="many2many_tags"/>
                                <field name="description" placeholder="Describe the discussion topic, objectives, and context..."/>
                            </group>
                        </page>
                        
                        <page string="Action Items">
                            <field name="action_item_ids">
                                <tree editable="bottom">
                                    <field name="description"/>
                                    <field name="assigned_to_id"/>
                                    <field name="due_date"/>
                                    <field name="priority" widget="priority"/>
                                    <field name="status" widget="badge" 
                                           decoration-success="status == 'completed'"
                                           decoration-info="status == 'in_progress'"
                                           decoration-muted="status == 'cancelled'"
                                           decoration-warning="status == 'blocked'"/>
                                    <field name="progress_percent" widget="percentage"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="description"/>
                                                <field name="assigned_to_id"/>
                                                <field name="priority" widget="priority"/>
                                                <field name="status"/>
                                            </group>
                                            <group>
                                                <field name="due_date"/>
                                                <field name="start_date"/>
                                                <field name="progress_percent" widget="percentage"/>
                                                <field name="estimated_hours"/>
                                                <field name="actual_hours"/>
                                            </group>
                                        </group>
                                        <group>
                                            <field name="detailed_plan" placeholder="Detailed action plan..."/>
                                        </group>
                                        <group string="Dependencies">
                                            <field name="dependent_on_ids" widget="many2many_tags"/>
                                        </group>
                                        <group string="Results">
                                            <field name="completion_notes" placeholder="Completion notes and results..."/>
                                            <field name="impact_description" placeholder="How did this action impact the KPI?"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        
                        <page string="Resolution" invisible="state in ['draft', 'active']">
                            <group>
                                <field name="resolution" placeholder="Resolution details and outcomes..."/>
                                <field name="resolved_by_id"/>
                                <field name="resolved_date"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_kpi_discussion_tree" model="ir.ui.view">
        <field name="name">kpi.discussion.tree</field>
        <field name="model">kpi.discussion</field>
        <field name="arch" type="xml">
            <tree string="KPI Discussions">
                <field name="title"/>
                <field name="kpi_name"/>
                <field name="discussion_type"/>
                <field name="priority" widget="priority"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'resolved'"
                       decoration-info="state == 'active'"
                       decoration-muted="state == 'closed'"
                       decoration-warning="state == 'draft'"/>
                <field name="initiator_id"/>
                <field name="action_items_count"/>
                <field name="completed_action_items"/>
                <field name="department"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_kpi_discussion_search" model="ir.ui.view">
        <field name="name">kpi.discussion.search</field>
        <field name="model">kpi.discussion</field>
        <field name="arch" type="xml">
            <search string="Search KPI Discussions">
                <field name="title"/>
                <field name="kpi_id"/>
                <field name="discussion_type"/>
                <field name="initiator_id"/>
                <field name="assigned_to_ids"/>
                <filter string="My Discussions" name="my_discussions" 
                        domain="['|', ('initiator_id', '=', uid), ('assigned_to_ids', 'in', uid)]"/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Resolved" name="resolved" domain="[('state', '=', 'resolved')]"/>
                <separator/>
                <filter string="High Priority" name="high_priority" domain="[('priority', 'in', ['2', '3'])]"/>
                <filter string="Performance Reviews" name="performance_reviews" 
                        domain="[('discussion_type', '=', 'performance_review')]"/>
                <filter string="Improvement Plans" name="improvement_plans" 
                        domain="[('discussion_type', '=', 'improvement_plan')]"/>
                <group expand="0" string="Group By">
                    <filter string="KPI" name="group_kpi" context="{'group_by': 'kpi_id'}"/>
                    <filter string="Discussion Type" name="group_type" context="{'group_by': 'discussion_type'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Department" name="group_department" context="{'group_by': 'department'}"/>
                    <filter string="Initiator" name="group_initiator" context="{'group_by': 'initiator_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- KPI Action Item Views -->
    <record id="view_kpi_action_item_form" model="ir.ui.view">
        <field name="name">kpi.action.item.form</field>
        <field name="model">kpi.action.item</field>
        <field name="arch" type="xml">
            <form string="KPI Action Item">
                <header>
                    <button name="action_start_progress" type="object" string="Start Progress" 
                            class="oe_highlight" invisible="status != 'open'"/>
                    <button name="action_complete" type="object" string="Mark Complete" 
                            class="oe_highlight" invisible="status not in ['open', 'in_progress']"/>
                    <button name="action_block" type="object" string="Mark Blocked" 
                            invisible="status not in ['open', 'in_progress']"/>
                    <button name="action_cancel" type="object" string="Cancel" 
                            invisible="status in ['completed', 'cancelled']"/>
                    <button name="action_reopen" type="object" string="Reopen" 
                            invisible="status not in ['completed', 'cancelled']"/>
                    <field name="status" widget="statusbar" statusbar_visible="open,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="description" placeholder="Action Item Description"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="discussion_id"/>
                            <field name="kpi_id"/>
                            <field name="assigned_to_id"/>
                            <field name="created_by_id"/>
                        </group>
                        <group>
                            <field name="priority" widget="priority"/>
                            <field name="start_date"/>
                            <field name="due_date"/>
                            <field name="completed_date" invisible="status != 'completed'"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="progress_percent" widget="percentage"/>
                    </group>
                    
                    <notebook>
                        <page string="Details">
                            <group>
                                <field name="detailed_plan" placeholder="Detailed action plan and steps..."/>
                            </group>
                        </page>
                        
                        <page string="Time Tracking">
                            <group>
                                <group>
                                    <field name="estimated_hours"/>
                                    <field name="actual_hours"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Dependencies">
                            <group>
                                <field name="dependent_on_ids" widget="many2many_tags"/>
                                <field name="blocking_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                        
                        <page string="Results" invisible="status not in ['completed', 'cancelled']">
                            <group>
                                <field name="completion_notes" placeholder="Completion notes and outcomes..."/>
                                <field name="impact_description" placeholder="How did this action impact the KPI performance?"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_kpi_action_item_tree" model="ir.ui.view">
        <field name="name">kpi.action.item.tree</field>
        <field name="model">kpi.action.item</field>
        <field name="arch" type="xml">
            <tree string="KPI Action Items">
                <field name="description"/>
                <field name="discussion_id"/>
                <field name="assigned_to_id"/>
                <field name="due_date"/>
                <field name="priority" widget="priority"/>
                <field name="status" widget="badge" 
                       decoration-success="status == 'completed'"
                       decoration-info="status == 'in_progress'"
                       decoration-muted="status == 'cancelled'"
                       decoration-warning="status == 'blocked'"/>
                <field name="progress_percent" widget="percentage"/>
            </tree>
        </field>
    </record>

    <record id="view_kpi_action_item_search" model="ir.ui.view">
        <field name="name">kpi.action.item.search</field>
        <field name="model">kpi.action.item</field>
        <field name="arch" type="xml">
            <search string="Search Action Items">
                <field name="description"/>
                <field name="discussion_id"/>
                <field name="assigned_to_id"/>
                <filter string="My Action Items" name="my_items" domain="[('assigned_to_id', '=', uid)]"/>
                <filter string="Open" name="open" domain="[('status', '=', 'open')]"/>
                <filter string="In Progress" name="in_progress" domain="[('status', '=', 'in_progress')]"/>
                <filter string="Completed" name="completed" domain="[('status', '=', 'completed')]"/>
                <filter string="Overdue" name="overdue" domain="[('due_date', '&lt;', context_today().strftime('%Y-%m-%d')), ('status', 'not in', ['completed', 'cancelled'])]"/>
                <separator/>
                <filter string="High Priority" name="high_priority" domain="[('priority', 'in', ['2', '3'])]"/>
                <group expand="0" string="Group By">
                    <filter string="Discussion" name="group_discussion" context="{'group_by': 'discussion_id'}"/>
                    <filter string="Assigned To" name="group_assigned" context="{'group_by': 'assigned_to_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                    <filter string="Due Date" name="group_due_date" context="{'group_by': 'due_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_kpi_discussion" model="ir.actions.act_window">
        <field name="name">KPI Discussions</field>
        <field name="res_model">kpi.discussion</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_my_discussions': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Start a KPI Discussion!
            </p>
            <p>
                Create discussions to collaborate on KPI performance, share insights, and develop improvement plans.
                Discussions can include performance reviews, improvement planning, and issue escalations.
            </p>
        </field>
    </record>

    <record id="action_kpi_action_item" model="ir.actions.act_window">
        <field name="name">KPI Action Items</field>
        <field name="res_model">kpi.action.item</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_my_items': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No action items yet!
            </p>
            <p>
                Action items are created from KPI discussions to track specific tasks and improvements.
                They help ensure that discussions lead to concrete actions and results.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_kpi_collaboration" name="Collaboration" parent="menu_kpi_root" sequence="30"/>
    
    <menuitem id="menu_kpi_discussion" name="Discussions" parent="menu_kpi_collaboration" 
              action="action_kpi_discussion" sequence="10"/>
    
    <menuitem id="menu_kpi_action_item" name="Action Items" parent="menu_kpi_collaboration" 
              action="action_kpi_action_item" sequence="20"/>

</odoo>
