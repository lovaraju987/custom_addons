<odoo>    
    <record id="view_kpi_report_group_form" model="ir.ui.view">
        <field name="name">kpi.report.group.form</field>
        <field name="model">kpi.report.group</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <button name="action_send_reminder_emails"
                                string="Send Reminder Emails"
                                type="object"
                                class="btn-primary"
                                groups="kpi_tracking.group_kpi_manager,kpi_tracking.group_kpi_admin"/>
                        <button name="action_refresh_all_kpis"
                                    string="Refresh All KPIs"
                                    type="object"
                                    class="btn btn-success"
                                    icon="fa-refresh"/>
                    </group>
                    <group>
                        <field name="name"/>
                        <field name="group_type"/>
                        <field name="department"/>
                        <field name="assigned_employee_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="description"/>
                        <field name="group_achievement_percent" readonly="1"/>
                        <field name="score_label" widget="badge" options="{'color_field': 'score_color'}"/>
                        <field name="score_color" invisible="1"/>
                    </group>
                    <notebook>
                        <page string="KPIs">
                            <field name="kpi_ids" context="{'default_report_id': id}">
                                <tree decoration-success="achievement_percent &gt; 100"
                                                    decoration-warning="achievement_percent &gt; 50 and achievement_percent &lt; 100"
                                                    decoration-danger="achievement_percent &lt; 50"
                                                    create="true" delete="true" edit="true"
                                                    open_form_view="true">
                                    <field name="name"/>
                                    <field name="last_submitted"/>
                                    <field name="department"/>
                                    <field name="kpi_type"/>
                                    <field name="report_type"/>
                                    <field name="priority_weight"/>
                                    <field name="kpi_direction"/>
                                    <field name="value" readonly="1"/>
                                    <field name="target_unit_display" readonly="1"/>
                                    <field name="achievement_percent" widget="progressbar"/>
                                    <field name="score_label" widget="badge" options="{'color_field': 'score_color'}"/>
                                    <field name="score_color" invisible="1"/>
                                    <button name="action_manual_refresh_kpi" 
                                            string="Submit" 
                                            type="object" 
                                            class="btn-primary"
                                            invisible="kpi_type != 'manual'"
                                            help="Submit value for this manual KPI"/>
                                </tree>
                            </field>
                        </page>
                        <page string="All Submissions">
                            <field name="submission_ids" context="{'default_report_id': id}">
                                <tree>
                                    <field name="date" string="Submitted On"/>                
                                    <field name="report_id"/>
                                    <field name="kpi_id"/>
                                    <field name="user_id"/>
                                    <field name="priority_weight"/>
                                    <field name="kpi_direction"/>
                                    <field name="value"/>
                                    <field name="target_unit_display" readonly="1"/>
                                    <field name="achievement_percent" widget="progressbar"/> 
                                    <field name="score_label" widget="badge" options="{'color_field': 'score_color'}"/>  
                                    <field name="score_color" invisible="1"/>
                                    <field name="note"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Group Submission History">
                            <field name="group_submission_ids" context="{'default_report_id': id}">
                                <tree>
                                    <field name="date" string="Submitted At"/>
                                    <field name="value"/>
                                    <field name="score_label" widget="badge" options="{'color_field': 'score_color'}"/>
                                    <field name="score_color" invisible="1"/>
                                    <field name="user_id"/>
                                    <field name="note"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_kpi_report_group_tree" model="ir.ui.view">
        <field name="name">kpi.report.group.tree</field>
        <field name="model">kpi.report.group</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="group_type"/>
                <field name="department"/>
                <field name="group_achievement_percent" widget="progressbar"/>
                <field name="score_label" widget="badge" options="{'color_field': 'score_color'}"/>
                <field name="score_color" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_kpi_report_group_search" model="ir.ui.view">
        <field name="name">kpi.report.group.search</field>
        <field name="model">kpi.report.group</field>
        <field name="arch" type="xml">
            <search string="Search Report Groups">
                <field name="name"/>
                <field name="group_type"/>
                <field name="department"/>
                <filter string="Daily Groups" name="daily" domain="[('group_type', '=', 'daily')]"/>
                <filter string="Weekly Groups" name="weekly" domain="[('group_type', '=', 'weekly')]"/>
                <filter string="Monthly Groups" name="monthly" domain="[('group_type', '=', 'monthly')]"/>
                <filter string="Yearly Groups" name="yearly" domain="[('group_type', '=', 'yearly')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Group Type" name="group_by_type" context="{'group_by': 'group_type'}"/>
                    <filter string="Department" name="group_by_department" context="{'group_by': 'department'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_kpi_report_group" model="ir.actions.act_window">
        <field name="name">Report Groups</field>
        <field name="res_model">kpi.report.group</field>
        <field name="view_mode">tree,form,graph,pivot</field>
    </record>

    <menuitem id="menu_kpi_group_list"
              name="Report Groups"
              parent="menu_kpi_root"
              action="action_kpi_report_group"
              sequence="40"/>

    <!-- Action for opening KPI from group view -->
    <record id="action_kpi_from_group" model="ir.actions.act_window">
        <field name="name">KPI Details</field>
        <field name="res_model">kpi.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_kpi_report_form"/>
        <field name="target">new</field>
    </record>
</odoo>
