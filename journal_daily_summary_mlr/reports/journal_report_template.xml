<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_journal_daily_summary">
        <t t-call="web.basic_layout">
            <div class="page">
                <t t-foreach="docs" t-as="doc">
                    <h2>Journal Daily Summary for <t t-esc="doc.report_date"/></h2>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Account</th>
                                <th>Debit</th>
                                <th>Credit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.entry_lines" t-as="line">
                                <tr>
                                    <td><t t-esc="line.account_id.name"/></td>
                                    <td><t t-esc="line.debit"/></td>
                                    <td><t t-esc="line.credit"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>
            </div>
        </t>
    </template>
</odoo>